  script. 
    $(function() {

      $("#jsGrid").jsGrid({
            width: "100%",
            height: "700px",

            filtering: true,
            sorting: true,
            paging: true,
            autoload: true,

            //pageSize: 15,
            //pageButtonCount: 5,
            controller: {
                loadData: function(filter) {
                    console.log(filter)
                    return $.ajax({
                        type: "GET",
                        url: "/catalog/books/book_load_grid",
                        dataType: "json",
                        data: filter
                    });
                }
            },
            fields: [
                { name: "title", title: "Title", type: "text", width: 150},
                { name: "summary", type: "text", width: 150 },
               // { name: "author.first_name", type: "text", width: 150 },
                { type: "control" }
               // ,
               
               // { name: "Summary", type: "text", width: 200 },
                
            ]
        });
    });    

